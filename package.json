        "gatsby-source-filesystem": "^2.1.46",
        "gatsby-transformer-json": "^2.4.5",
        "gatsby-transformer-sharp": "^2.3.12",
        "husky": "^4.0.10",
        "lint-staged": "^10.0.0",
        "postcss-import": "^12.0.1",
        "prettier": "^1.19.1",
        "typescript": "^3.9.2"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "prettier --write",
            "eslint --max-warnings 0 --cache --ignore-pattern '!.eslintrc.js'"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "all",
        "endOfLine": "lf",
        "printWidth": 80,
        "arrowParens": "always",
        "semi": false,
        "singleQuote": true
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
