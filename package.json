        "react-dom": "^16.12.0",
        "react-helmet": "^5.2.1",
        "react-use": "^14.0.0",
        "tailwindcss": "^1.1.4"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@types/mdx-js__react": "^1.5.2",
        "@types/node": "^14.0.1",
        "@types/react": "^16.9.35",
        "@types/react-dom": "^16.9.8",
        "@types/react-helmet": "^6.0.0",
        "@typescript-eslint/eslint-plugin": "^2.33.0",
        "@typescript-eslint/parser": "^2.33.0",
        "commitizen": "^4.1.2",
        "cz-conventional-changelog": "3.2.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-import-resolver-typescript": "^2.0.0",
        "eslint-plugin-import": "2.20.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-mdx": "^1.6.5",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.18.0",
        "eslint-plugin-react-hooks": "^2.3.0",
        "gatsby-plugin-catch-links": "^2.1.24",
        "gatsby-plugin-eslint": "^2.0.8",
        "gatsby-plugin-feed": "^2.5.1",
        "gatsby-plugin-mdx": "^1.0.67",
        "gatsby-plugin-postcss": "^2.3.1",
        "gatsby-plugin-purgecss": "^4.0.1",
        "gatsby-plugin-react-helmet": "^3.1.21",
        "gatsby-plugin-sharp": "^2.3.13",
        "gatsby-plugin-simple-analytics": "^1.0.3",
        "gatsby-plugin-twitter": "^2.1.18",
        "gatsby-remark-copy-linked-files": "^2.1.36",
        "gatsby-remark-embedder": "^1.7.0",
        "gatsby-remark-external-links": "^0.0.4",
        "gatsby-remark-images": "^3.1.42",
        "gatsby-remark-responsive-iframe": "^2.2.31",
        "gatsby-remark-smartypants": "^2.1.20",
