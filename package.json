{
    "name": "www",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "build": "next build",
        "commit": "git-cz",
        "dev": "next dev",
        "start": "next start",
        "typecheck": "tsc"
    },
    "dependencies": {
        "@silvenon/remark-smartypants": "^1.0.0",
        "date-fns": "^2.16.1",
        "gray-matter": "4.0.2",
        "littlefoot": "^3.4.1",
        "next": "latest",
        "next-themes": "^0.0.6",
        "react": "^16.13.0",
        "react-dom": "^16.13.0",
        "react-use": "^15.3.4",
        "remark": "^13.0.0",
        "remark-external-links": "^8.0.0",
        "remark-footnotes": "^3.0.0",
        "remark-html": "^13.0.1",
        "rss": "^1.2.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@types/classnames": "^2.2.10",
        "@types/jest": "^25.2.2",
        "@types/node": "^14.0.1",
        "@types/react": "^16.9.35",
        "@types/react-dom": "^16.9.8",
        "@types/rss": "^0.0.28",
        "@typescript-eslint/eslint-plugin": "^4.5.0",
        "@typescript-eslint/parser": "^4.5.0",
        "commitizen": "^4.2.2",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.12.0",
        "eslint-config-prettier": "^6.14.0",
        "eslint-import-resolver-typescript": "^2.3.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.4.2",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.1.2",
        "tailwindcss": "^1.4.0",
        "typescript": "^3.9.2"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write",
            "eslint --max-warnings 0 --cache --ignore-pattern '!.eslintrc.js'"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "all",
        "endOfLine": "lf",
        "printWidth": 80,
        "arrowParens": "always",
        "semi": false,
        "singleQuote": true
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
